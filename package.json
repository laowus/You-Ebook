    "sqlite3": "^5.1.7",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.3",
    "concurrently": "^7.1.0",
    "cross-env": "^7.0.3",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "wait-on": "^6.0.1",
    "vite": "^6.3.5"
  },
  "build": {
    "appId": "xyz.hxl.youebook",
    "productName": "You Ebook 捡书",
